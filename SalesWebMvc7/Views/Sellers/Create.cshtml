@model SalesWebMvc7.Models.ViewModels.SellersFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>
<hr />            <!-- isto é uma linha -->
<div class="row">
    <div class="col-md-4">                                                  <!-- 4 para ocupar 1/3 da tela, pois o botstrap divide a tela em 12 partes-->
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Sellers.Name" class="control-label"></label>
                <input asp-for="Sellers.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Sellers.Email" class="control-label"></label>
                <input asp-for="Sellers.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Sellers.BirthDate" class="control-label"></label>
                <input asp-for="Sellers.BirthDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Sellers.BaseSalary" class="control-label"></label>
                <input asp-for="Sellers.BaseSalary" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Sellers.DepartmentId" class="control-label"></label>           <!-- associando o label c/ o departmentId -->
                <select asp-for="Sellers.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))" class="form-control"></select>   <!-- select é a caixinha de seleção do html -->
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default btn-dark" />
            </div>

        </form>
    </div>
</div>
