@model IEnumerable<SalesWebMvc7.Models.Sellers>

@{
    ViewData["Title"] = "Sellers";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default btn-dark">Create New</a>
</p>

<table class="table table-striped table-hover" >
    <thead>   <!-- cabeçalho -->

        <tr bgcolor="#1C1C1C">
            <!-- linha -->

            <th>
                <!-- || coluna || -->
                <font color="white">@Html.DisplayNameFor(model => model.Name)</font>   <!-- exp lambda -->
            </th>
            <th>
                <font color="white">@Html.DisplayNameFor(model => model.Email)</font>
            </th>
            <th>
                <font color="white">@Html.DisplayNameFor(model => model.BirthDate)</font>
            </th>
            <th>
                <font color="white">@Html.DisplayNameFor(model => model.BaseSalary)</font>
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>   <!-- corpo -->
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BaseSalary)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-itemid="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-itemid="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-itemid="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



<table class="table table-striped table-hover col-lg-6" style="margin-left: 2px; width: 99%" ng-show="showMaquinas">
    <thead>
        <tr>
            <th bgcolor="#428bca">
                <font color="white"><center>Nome	da Maquina</font>
                </center>
            </th>
            <th bgcolor="#428bca">
                <font color="white"><center>Total Apontamento</font>
                </center>
            </th>
        </tr>
    </thead>
</table>